<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.server.coursework.ServerController"
      spacing="10" alignment="CENTER">
    <Label text="Chat Server" style="-fx-font-size: 16px;"/>
    <TextArea fx:id="statusLabel" editable="false" text="Status: Stopped"/>
    <HBox spacing="10">
        <Button fx:id="startButton" text="Start Server" onAction="#onStartButtonClick"/>
        <Button fx:id="stopButton" text="Stop Server" onAction="#onStopButtonClick"/>
    </HBox>
    <TextArea fx:id="logArea" editable="false" prefHeight="200" prefWidth="400"/>
</VBox>
